<Page
    x:Class="DemoUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DemoUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBox x:Name="txtMessage" HorizontalAlignment="Left" Margin="88,192,0,0" TextWrapping="Wrap" Width="240" VerticalAlignment="Top" RenderTransformOrigin="0.658,4.812" TextChanged="txtMessage_TextChanged"/>
        <Button x:Name="btnShow" Content="Show" Margin="88,262,0,0" Width="110" FontSize="14" Click="btnShow_Click" VerticalAlignment="Top"/>
        <TextBlock x:Name="lblContent" HorizontalAlignment="Left" Margin="88,154,0,0" TextWrapping="Wrap" Text="Hiển thị dữ liệu từ textbox" VerticalAlignment="Top"/>

    </Grid>
</Page>
