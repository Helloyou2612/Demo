<Page
    x:Class="DemoADO_NET.EditVIew"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DemoADO_NET"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel 
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
        Margin="100, 50">
        <TextBox x:ConnectionId='2' x:Name="txtName"
                 PlaceholderText="Name" 
                 Margin="5"
                 Padding="10"
                 Text="{Binding Name}"></TextBox>
        <TextBox x:ConnectionId='3' x:Name="txtType"
                 PlaceholderText="Type"
                 Margin="5"
                 Padding="10"
                 Text="{Binding Type}"></TextBox>
        <TextBox x:ConnectionId='4' x:Name="txtPrice"
                 PlaceholderText="Price"
                 Margin="5"
                 Padding="10"
                 Text="{Binding Price}"></TextBox>
        <Button x:ConnectionId='5' x:Name="btnEdit" 
                Background="Green" 
                HorizontalAlignment="Center"
                MinWidth="150"
                MaxWidth="500"
                Padding="10"
                Foreground="White"
                FontWeight="SemiBold"
                FontSize="20"
                                       >Edit</Button>
    </StackPanel>
</Page>

